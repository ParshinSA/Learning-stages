<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.btntransition.transition.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/frg_start">
        <action
            android:id="@+id/action_startFragment_to_containerTransformFragment"
            app:destination="@id/containerTransformFragment" />
        <action
            android:id="@+id/action_startFragment_to_containerTransformFragment2"
            app:destination="@id/containerTransformFragment2" />
        <action
            android:id="@+id/action_startFragment_to_sharedZ"
            app:destination="@id/sharedZ" />
    </fragment>
    <fragment
        android:id="@+id/containerTransformFragment"
        android:name="com.example.btntransition.transition.ContainerTransformFragment"
        android:label="ContainerTransformFragment"
        tools:layout="@layout/frg_container_transform">
        <action
            android:id="@+id/action_containerTransformFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/containerTransformFragment2"
        android:name="com.example.btntransition.transition.ContainerTransformFragment2"
        android:label="ContainerTransformFragment2"
        tools:layout="@layout/frg_container_transform2">
        <action
            android:id="@+id/action_containerTransformFragment2_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/sharedZ"
        android:name="com.example.btntransition.transition.SharedZ"
        android:label="SharedZ" >
        <action
            android:id="@+id/action_sharedZ_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>