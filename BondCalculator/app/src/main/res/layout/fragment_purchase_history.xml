<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPurchaseHistoryInfoList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewColorPercentBuyBonds"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/imageViewColorPercentBuyBonds"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/colorPercentBuyBonds"
        app:layout_constraintBottom_toBottomOf="@id/textViewTxtBuyBonds"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/textViewTxtBuyBonds" />

    <TextView
        android:id="@+id/textViewTxtBuyBonds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginColorAndTextPayouts"
        android:text="@string/textViewTxtBuyBonds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewColorPercentBuyBonds" />

    <ImageView
        android:id="@+id/imageViewColorPercentPaymentMoney"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/colorPercentPaymentMoney"
        app:layout_constraintBottom_toBottomOf="@id/textViewTxtPaymentMoney"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/textViewTxtPaymentMoney" />

    <TextView
        android:id="@+id/textViewTxtPaymentMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginColorAndTextPayouts"
        android:text="@string/textViewTxtPaymentMoney"
        app:layout_constraintBottom_toTopOf="@id/textViewTxtBuyBonds"
        app:layout_constraintStart_toEndOf="@+id/imageViewColorPercentPaymentMoney" />


</androidx.constraintlayout.widget.ConstraintLayout>