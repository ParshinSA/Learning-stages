<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/textViewTxtYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2022" />

    <LinearLayout
        android:id="@+id/linearLayoutContainerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTxtYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewTxtYear"
        app:layout_constraintTop_toTopOf="@+id/textViewTxtYear">

        <View
            android:id="@+id/viewPercentBuyBonds"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_buy_bonds" />

        <View
            android:id="@+id/viewPercentPaymentMoney"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_payment_money" />

        <View
            android:id="@+id/viewPercentMoneyFromPastPeriods"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_money_from_past_periods" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>