<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search_city"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/myPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/search_menu_toolbar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/AddCityFragment_text_title_toolbar"
        app:titleTextColor="@color/darkColorText" />

    <TextView
        android:id="@+id/no_result"
        app:layout_constraintTop_toBottomOf="@id/toolbar_search_city"
        android:layout_width="match_parent"
        android:text="Результатов нет."
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_search_city"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_search_city"
        tools:listitem="@layout/item_result_search" />

</androidx.constraintlayout.widget.ConstraintLayout>